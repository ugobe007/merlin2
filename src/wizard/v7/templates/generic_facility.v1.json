{
  "schema": "industry-template-v1",
  "industry": "generic",
  "version": "generic.v1.0.0",
  "calculator": {
    "id": "generic_load_v1",
    "requiredInputs": [
      "facility_sqft",
      "operating_hours_per_day",
      "monthly_kwh",
      "peak_demand_kw",
      "demand_charge",
      "demand_charge_rate"
    ]
  },
  "parts": [
    {
      "id": "facility",
      "label": "Facility Basics",
      "description": "Tell us about your facility",
      "questionIds": [
        "facility_sqft",
        "operating_hours_per_day",
        "employee_count",
        "facility_age_years"
      ]
    },
    {
      "id": "energy",
      "label": "Energy Profile",
      "description": "Current energy usage and costs",
      "questionIds": ["monthly_kwh", "peak_demand_kw", "demand_charge", "demand_charge_rate"]
    },
    {
      "id": "goals",
      "label": "Goals & Equipment",
      "description": "What are you looking to achieve?",
      "questionIds": ["primary_goal", "has_solar", "has_generator", "critical_load_pct"]
    },
    {
      "id": "priorities",
      "label": "Priorities",
      "description": "What matters most to you?",
      "questionIds": ["budget_range", "timeline", "grid_reliability", "sustainability_priority"]
    }
  ],
  "defaults": {
    "facility_sqft": 50000,
    "operating_hours_per_day": 10,
    "employee_count": 50,
    "facility_age_years": 15,
    "monthly_kwh": 50000,
    "peak_demand_kw": 200,
    "demand_charge": true,
    "demand_charge_rate": 15,
    "primary_goal": "peak_shaving",
    "has_solar": false,
    "has_generator": false,
    "critical_load_pct": 50,
    "budget_range": "500k_2m",
    "timeline": "6_12_months",
    "grid_reliability": "reliable",
    "sustainability_priority": false
  },
  "mapping": {
    "facility_sqft": { "from": "facility_sqft" },
    "operating_hours_per_day": { "from": "operating_hours_per_day" },
    "monthly_kwh": { "from": "monthly_kwh" },
    "peak_demand_kw": { "from": "peak_demand_kw" },
    "demand_charge": { "from": "demand_charge" },
    "demand_charge_rate": { "from": "demand_charge_rate", "transform": "ifDemandChargeElseZero" }
  },
  "questions": [
    {
      "id": "facility_sqft",
      "label": "Facility Size",
      "type": "number",
      "required": true,
      "unit": "sq ft",
      "min": 500,
      "max": 5000000,
      "hint": "Total conditioned space in square feet"
    },
    {
      "id": "operating_hours_per_day",
      "label": "Operating Hours Per Day",
      "type": "number",
      "required": true,
      "unit": "hours",
      "min": 1,
      "max": 24,
      "hint": "Typical daily operating hours"
    },
    {
      "id": "employee_count",
      "label": "Number of Employees",
      "type": "number",
      "required": false,
      "min": 1,
      "max": 10000,
      "hint": "Approximate headcount on-site"
    },
    {
      "id": "facility_age_years",
      "label": "Building Age",
      "type": "number",
      "required": false,
      "unit": "years",
      "min": 0,
      "max": 100,
      "hint": "Approximate age of the building"
    },
    {
      "id": "monthly_kwh",
      "label": "Monthly Electricity Usage",
      "type": "number",
      "required": true,
      "unit": "kWh",
      "min": 100,
      "max": 50000000,
      "hint": "Average monthly kWh from your utility bill"
    },
    {
      "id": "peak_demand_kw",
      "label": "Peak Demand",
      "type": "number",
      "required": true,
      "unit": "kW",
      "min": 10,
      "max": 100000,
      "hint": "Highest demand recorded on your bill"
    },
    {
      "id": "demand_charge",
      "label": "Do You Pay Demand Charges?",
      "type": "boolean",
      "required": true,
      "hint": "Check your bill for a $/kW line item"
    },
    {
      "id": "demand_charge_rate",
      "label": "Demand Charge Rate",
      "type": "number",
      "required": false,
      "unit": "$/kW",
      "min": 0,
      "max": 100,
      "hint": "Per-kW demand charge from your bill"
    },
    {
      "id": "primary_goal",
      "label": "Primary Goal for Energy Storage",
      "type": "select",
      "required": true,
      "options": [
        { "value": "peak_shaving", "label": "Reduce demand charges (peak shaving)" },
        { "value": "backup_power", "label": "Backup power / resilience" },
        { "value": "energy_arbitrage", "label": "Buy low, use high (arbitrage)" },
        { "value": "renewable_integration", "label": "Maximize solar/wind usage" },
        { "value": "demand_response", "label": "Utility demand response programs" },
        { "value": "sustainability", "label": "Meet sustainability targets" }
      ],
      "hint": "What's driving your interest in battery storage?"
    },
    {
      "id": "has_solar",
      "label": "Do You Have Solar Panels?",
      "type": "boolean",
      "required": false,
      "hint": "Existing or planned rooftop/ground-mount solar"
    },
    {
      "id": "has_generator",
      "label": "Do You Have a Backup Generator?",
      "type": "boolean",
      "required": false,
      "hint": "Existing diesel, natural gas, or dual-fuel generator"
    },
    {
      "id": "critical_load_pct",
      "label": "Critical Load Percentage",
      "type": "number",
      "required": false,
      "unit": "%",
      "min": 0,
      "max": 100,
      "hint": "What percentage of your load is critical during an outage?"
    },
    {
      "id": "budget_range",
      "label": "Budget Range",
      "type": "select",
      "required": false,
      "options": [
        { "value": "under_100k", "label": "Under $100K" },
        { "value": "100k_500k", "label": "$100K – $500K" },
        { "value": "500k_2m", "label": "$500K – $2M" },
        { "value": "2m_5m", "label": "$2M – $5M" },
        { "value": "over_5m", "label": "Over $5M" },
        { "value": "not_sure", "label": "Not sure yet" }
      ],
      "hint": "Approximate project budget (helps us right-size the system)"
    },
    {
      "id": "timeline",
      "label": "Project Timeline",
      "type": "select",
      "required": false,
      "options": [
        { "value": "asap", "label": "ASAP (1–3 months)" },
        { "value": "3_6_months", "label": "3–6 months" },
        { "value": "6_12_months", "label": "6–12 months" },
        { "value": "12_plus", "label": "12+ months" },
        { "value": "exploring", "label": "Just exploring" }
      ],
      "hint": "When are you looking to move forward?"
    },
    {
      "id": "grid_reliability",
      "label": "Grid Reliability at Your Site",
      "type": "select",
      "required": false,
      "options": [
        { "value": "reliable", "label": "Reliable (rare outages)" },
        { "value": "occasional", "label": "Occasional outages (a few per year)" },
        { "value": "frequent", "label": "Frequent outages (monthly+)" },
        { "value": "unreliable", "label": "Unreliable / off-grid" }
      ],
      "hint": "How often does your site experience power outages?"
    },
    {
      "id": "sustainability_priority",
      "label": "Is Sustainability a Priority?",
      "type": "boolean",
      "required": false,
      "hint": "Do you have ESG targets, net-zero commitments, or green building goals?"
    }
  ]
}
